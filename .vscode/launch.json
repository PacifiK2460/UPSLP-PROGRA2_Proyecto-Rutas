{
    "version": "0.2.0",
    "configurations": [
        {
            "program": "${command:cmake.launchTargetPath}",
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Debug",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "externalConsole": true
        },
        {
            "program": "${command:cmake.launchTargetPath}",
            "name": "Build & Run",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Build",
            "externalConsole": true
        },
        {
            "program": "${command:cmake.launchTargetPath}",
            "name": "Build",
            "type": "cppdbg",
            "request": "attach",
            "preLaunchTask": "Build"
        },
        {
            "name": "C/C++: gcc build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}